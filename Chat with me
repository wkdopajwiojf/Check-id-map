---------------------------
-- 3. DXD RELAY CHAT CLIENT (Minimize + no echo)
---------------------------
local function roundify(obj, r)
	local c = Instance.new("UICorner")
	c.CornerRadius = UDim.new(0, r or 8)
	c.Parent = obj
end

local function getTimeTag()
	local t = os.date("*t")
	return string.format("[%02d:%02d]", t.hour, t.min)
end

local function tween(obj, time, props)
	local tw = TweenService:Create(obj, TweenInfo.new(time, Enum.EasingStyle.Sine, Enum.EasingDirection.Out), props)
	tw:Play()
	return tw
end

local screen = Instance.new("ScreenGui", game:GetService("CoreGui"))
screen.Name = "DXD_ChatUI"
screen.ResetOnSpawn = false

local frame = Instance.new("Frame", screen)
frame.AnchorPoint = Vector2.new(1,1)
frame.Position = UDim2.new(1,-16,1,-16)
frame.Size = UDim2.new(0,360,0,260)
frame.BackgroundColor3 = Color3.fromRGB(25,25,25)
frame.Active = true
frame.Draggable = true
roundify(frame, 12)

local titleBar = Instance.new("Frame", frame)
titleBar.BackgroundTransparency = 1
titleBar.Size = UDim2.new(1,0,0,32)

local title = Instance.new("TextLabel", titleBar)
title.Size = UDim2.new(1,-60,1,0)
